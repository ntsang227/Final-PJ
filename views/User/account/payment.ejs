<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Accept a payment with Credit Card</title>
    <meta name="description" content="A demo of a payment on Stripe" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/checkout.css" />
    <script src="https://js.stripe.com/v3/"></script>
    <script src="/js/checkout.js" defer></script>
  </head>
  <body>
    <!-- Display a payment form -->
    <form id="payment-form">
        <h2>Nạp tiền qua Credit Card</h2>
        <div id="link-authentication-element">
        <!--Stripe.js injects the Link Authentication Element-->
        </div>
        <div id="payment-element">
        <!--Stripe.js injects the Payment Element-->
        </div>
        <div class="amount">
            <label class="" for="numberInput">Số tiền</label>
            <input type="number" id="amount" name="amount" placeholder="Nhập số tiền" min="50000" step="5000" required />
            <label id="amount-error-msg" style="color: red; font-size:12px;  margin-bottom: -12px; margin-top:6px"></label>
          </div>
        <br>
        <button id="submit">
        <div class="spinner hidden" id="spinner"></div>
        <span id="button-text">Nạp Tiền</span>
        </button>
        <div id="payment-message" class="hidden"></div>
    </form>
  
  </body>
</html>