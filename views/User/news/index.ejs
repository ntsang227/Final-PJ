<%- include('../layout/headerv2.ejs') %>

  <section id="main-content" class=" ">
    <section class="wrapper main-wrapper row">
        <div class="container">
          <% if (typeof news !=='undefined' && Array.isArray(news) && news.length> 0) { %>
            <% for(var i=0; i< news.length; i++){ %>
                <div class="container" style="display: flex; flex-direction: row;">
                    <img class="img" src=" <%= news[i].image %>" alt="Images" style="flex: 1; max-height: 160px; max-width: 150px; margin-right: 30px;">
                    <div class="content" style="flex:4; display: flex; flex-direction: column;">
                        <h5 class="name" style="flex:1; margin-top: 30px;">Tên : <%= news[i].name %>
                        </h5>
                        <p class="text" style="flex:3; overflow:hidden;max-height: 90px; max-width: 100%; ">Nội dung: <%= news[i].content %>
                        </p>
                    </p>
                    <p class="date" style="flex:1;">Ngày đăng: <%= new Date(news[i].createdAt).toLocaleString('vi-VN') %>
                    </p>
                    <p class="edit" style="flex:1; border-bottom: rgb(168, 168, 168) solid 1px;">
                      <a href="/">Quay lại</a>
                  </p>
                    </div>
                </div>
                <br>
                <% } %>
                    <% } else { %>
                        <p>No news found</p>
                        <% } %>
        </div>


    </section>
</section>

<%- include('../layout/footer.ejs') %>
</body>

</html>
