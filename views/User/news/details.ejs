<%- include('../layout/headerv2.ejs') %>
  
  <section id="main-content" class=" ">
    <section class="wrapper main-wrapper row">
        <div class="container">
            <% if (typeof news !=='undefined' && news) { %>
                    <div class="container" style="display: flex; flex-direction: row;">
                        <img class="img" src="<%= news.image %>" alt="Images" style="flex: 1; max-height: 160px; max-width: 150px; margin-right: 30px; margin-top: 35px;">
                        <div class="content" style="flex:4; display: flex; flex-direction: column;">
                            <h6 style="flex:1; margin-top: 30px; font-size: 24px "><%= news.name %>
                            </h6>
                            <p class="text" style="flex:auto; overflow:hidden; max-width: 100%; "><%= news.content %>
                            </p>
                            <p class="date" style="flex:1;">Ngày đăng: <%= new Date(news.createdAt).toLocaleString('vi-VN') %>
                            </p>
                            <p class="date" style="flex:1 ; ">Cập nhật lần cuối: <%= new Date(news.updatedAt).toLocaleString('vi-VN') %>
                            </p>
                            <p class="edit" style="flex:1; border-bottom: rgb(168, 168, 168) solid 1px;">
                                <a href="/news">Quay lại</a>
                            </p>
                        </div>
                    </div>
                    <br>
                        <% } else { %>
                            <p>No news found</p>
                            <% } %>
        </div>


    </section>
</section>

<%- include('../layout/footer.ejs') %>
</body>

</html>
