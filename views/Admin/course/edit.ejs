<%- include('../layout/header.ejs') %>
<!-- END TOPBAR -->
<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
    <!-- SIDEBAR - START -->
      <%- include('../layout/menu.ejs') %>
    <!--  SIDEBAR - END -->
    <!-- START CONTENT -->
    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper row">
            <div class='col-xs-12'>
                <div class="page-title">
                    <div class="pull-left">
                        <h1 class="title">Sửa Tin Tức</h1>
                    </div>
                </div>
            </div>
            <form method="POST" action="/course/<%= courses._id %>?_method=PUT">
                <label for="name" style="display: block; margin-bottom: 10px;">Tên khóa học:</label>
                <input type="text" id="name" name="name" value="<%= courses.name %>" style="padding: 5px; border-radius: 3px; border: 1px solid #ccc;" required>

                <label for="nametutor" style="display: block; margin-bottom: 10px;">Giảng viên:</label>
                <input type="text" id="nametutor" name="nametutor" value="<%= courses.nametutor %>" style="padding: 5px; border-radius: 3px; border: 1px solid #ccc;" required>

                <label for="nameuser" style="display: block; margin-bottom: 10px;">Người học:</label>
                <input type="text" id="nameuser" name="nameuser" value="<%= courses.nameuser %>" style="padding: 5px; border-radius: 3px; border: 1px solid #ccc;">

                <label for="content" style="display: block; margin-bottom: 10px;">Nội dung khóa học:</label>
                <textarea id="content" name="content" style="padding: 5px; border-radius: 3px; border: 1px solid #ccc;"><%= courses.content %></textarea>
                <label for="status" style="display: block; margin-bottom: 10px;">Trạng thái:</label>
                <select id="status" name="status" value="<%= courses.status %>" style="padding: 5px; border-radius: 3px; border: 1px solid #ccc;">
                    <option value="Đang mở">Đang mở</option>
                    <option value="Đã đóng">Đã đóng</option>
                </select>
                <button type="submit" style="display: block; margin-top: 10px; padding: 10px 20px; background-color: #333; color: #fff; border: none; border-radius: 3px;">Chỉnh sửa</button>
                </form>
                <br>
                <% if (typeof message !== 'undefined' && message != '') { %>
                    <div class="alert alert-success"><%= message %></div>
                <% } %>
        </section>
    </section>
    <!-- END CONTENT -->
    <div class="chatapi-windows ">
    </div>
<%- include('../layout/footer.ejs') %>