<%- include('../layout/header.ejs') %>
<!-- END TOPBAR -->
<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
    <!-- SIDEBAR - START -->
      <%- include('../layout/menu.ejs') %>
    <!--  SIDEBAR - END -->
    <!-- START CONTENT -->
    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper row">
            <%- include('../course/search.ejs') %>
            <div class="container">
                <% if (typeof courses !== 'undefined' && Array.isArray(courses) && courses.length > 0) { %>
                <table class="table">
                    <thead class="" style="background-color: #67CDF9; color: aliceblue;">
                        <tr>
                            <th scope="col">Tên Khóa Học</th>
                            <th scope="col">Mã Khóa Học</th>
                            <th scope="col">Tên Giáo Viên</th>
                            <th scope="col">ngày đăng</th>
                            <th scope="col">Ghi chú</th>
                        </tr>
                    </thead>
                    <tbody>

                            <% for(var i=0; i< courses.length; i++){ %>
                                <% if (courses[i].status !== 'Đã đóng' ) { %>
                                <tr>
                                    <td>
                                        <%= courses[i].name %>
                                    </td>
                                    <td>
                                        <%= courses[i].key %>
                                    </td>
                                    <td>
                                        <%= courses[i].nametutor %>
                                    </td>
                                    <td>
                                        <%= courses[i].datePost.getDate() %>/<%= courses[i].datePost.getMonth() + 1 %>/<%= courses[i].datePost.getFullYear() %> lúc <%= courses[i].datePost.getHours() %>:<%= courses[i].datePost.getMinutes() %>:<%= courses[i].datePost.getSeconds() %>


                                    </td>
                                    <td>
                                        <a href="/admin/course/details.html/<%= courses[i]._id %>">Chi tiết</a>
                                    </td>
                                </tr>
                                <% } %>
                            <% } %>
                    </tbody>
                </table>
                <% } else { %>
                    <p>Không có khóa học cần phê duyệt</p>
                <% } %>        
            </div>
            <% if (typeof message !== 'undefined' && message != '') { %>
                <div class="alert alert-success" style="margin-top: 100px ;"><%= message %></div>
            <% } %>
        </section>
        
    </section>
    <!-- END CONTENT -->
    <div class="chatapi-windows ">
    </div>
<%- include('../layout/footer.ejs') %>