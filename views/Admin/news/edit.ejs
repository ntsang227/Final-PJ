<%- include('../layout/header.ejs') %>
<!-- END TOPBAR -->
<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
    <!-- SIDEBAR - START -->
      <%- include('../layout/menu.ejs') %>
    <!--  SIDEBAR - END -->
    <!-- START CONTENT -->
    <section id="main-content" class=" ">
      <section class="wrapper main-wrapper row">
        <div class="container">
          <nav class="navbar navbar-light justify-content-between" style="margin-bottom: 20px; background-color: #C0C0C0;">
            <h3 class="title ">Sửa tin tức</h3>
          </nav>
              <form method="POST" action="/admin/news/<%= news._id %>?_method=PUT" enctype="multipart/form-data" class="form-style">
                <div class="form-group" >
                  <label for="name">Tiêu đề mới:</label>
                  <input type="text" class="form-control" name="name" id="name" value="<%= news.name %>" autocomplete="off">
                </div>
                <div class="form-group">
                  <label for="content">Nội dung bài viết mới:</label>
                  <textarea class="form-control" rows="5" name="content" id="content"><%= news.content %></textarea>
                </div>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text">Upload</span>
                  </div>
                  <div class="custom-file">
                    <input type="file" class="custom-file-input" name="image" id="image" onchange="updateFileName(this)">
                    <label class="custom-file-label" for="image" style="padding-top: 7px; max-width: 100%; height: auto; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                      <%= news.image %>
                    </label>
                    
                  </div>
                </div>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                  Sửa tin tức
                </button>
                <!-- Modal -->
              <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content" style="border-radius: 4px;">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalCenterTitle">Bạn có chắc muốn sửa tin tức này không?</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      Vui lòng nhấn xác nhận nếu đồng ý hoặc hủy để dừng thao tác!
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                      <button type="submit" class="btn btn-primary" data-toggle="modal">Đồng ý</button>
                    </div>
                  </div>
                </div>
              </div>
              </form>
              <br>
              <% if (typeof message !== 'undefined' && message != '') { %>
                <div class="alert alert-success"><%= message %></div>
            <% } %>
            </div>
          </div>
        </div>
      </section>
    </section>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <!-- END CONTENT -->
