<%- include('../layout/header.ejs') %>
    <!-- END TOPBAR -->
    <!-- START CONTAINER -->
    <div class="page-container row-fluid container-fluid">
        <!-- SIDEBAR - START -->
        <%- include('../layout/menu.ejs') %>
            <!--  SIDEBAR - END -->
            <!-- START CONTENT -->
            <section id="main-content" class=" ">
                <section class="wrapper main-wrapper row">
                    <div class="container">
                        <div class="card mb-3">
                        <% if (typeof news !=='undefined' && news) { %>
                                <div class="container" style="display: flex; flex-direction: row;">
                                    <div class="col-md-4 float-right" style="margin-top: 30px; margin-bottom: 30px;">
                                        <img class="img img-thumbnail" src="<%= news.image %>" alt="Images" style="flex: 1; max-width: 100%; height: auto; ">
                                        <br>
                                        <div class="d-flex justify-content-center">
                                            <button type="button" class="btn btn-warning btn-sm" style="margin-top: 30px; margin-right: 10px; width: 40%" onclick="urlAction('/admin/news/edit/<%= news._id %>')">Sửa tin tức</button> 
                                            <button type="button" class="btn btn-danger btn-sm" style="margin-top: 30px; width: 40%" data-toggle="modal" data-target="#exampleModalCenter" >Xóa tin tức</button>
                                              <!-- Modal -->
                                            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                              <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content" style="border-radius: 4px;">
                                                  <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalCenterTitle">Bạn có chắc muốn xóa tin tức này không?</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                      <span aria-hidden="true">&times;</span>
                                                    </button>
                                                  </div>
                                                  <div class="modal-body">
                                                    Vui lòng nhấn xác nhận nếu đồng ý hoặc hủy để dừng thao tác!
                                                  </div>
                                                  <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                                    <button type="submit" class="btn btn-primary" data-toggle="modal" onclick="urlAction('/admin/news/delete/<%= news._id %>')">Đồng ý</button>
                                                  </div>
                                                </div>
                                              </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="content" style="flex:4; display: flex; flex-direction: column;">
                                        <h1 class="name" style="flex:1; margin-top: 30px; "><%= news.name %>
                                        </h1>
                                        <span>Nguồn bài viết:<a style="margin-top: -6px;" href="<%= news.sourceUrl %>" target="_blank"> <%= news.sourceUrl %></a></span>
                                        <hr>
                                        <p class="text" style="flex:auto; overflow:hidden; max-width: 100%; ">Nội dung: <%= news.content %>
                                        </p>
                                        
                                        <p class="date" style="flex:1;">Ngày đăng: <%= new Date(news.createdAt).toLocaleString('vi-VN') %> | Cập nhật lần cuối: <%= new Date(news.updatedAt).toLocaleString('vi-VN') %>
                                        </p>
                                    </div>
                                </div>
                                    <% } else { %>
                                        <p>No news found</p>
                                        <% } %>
                    </div>
                </div>

                </section>
            </section>
            <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
            <!-- END CONTENT -->
            <div class="chatapi-windows ">
            </div>
            <%- include('../layout/footer.ejs') %>