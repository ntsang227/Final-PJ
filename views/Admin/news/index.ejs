<%- include('../layout/header.ejs') %>
    <!-- END TOPBAR -->
    <!-- START CONTAINER -->
    <div class="page-container row-fluid container-fluid">
        <!-- SIDEBAR - START -->
        <%- include('../layout/menu.ejs') %>
            <!--  SIDEBAR - END -->
            <!-- START CONTENT -->
            <section id="main-content" class=" ">
                <section class="wrapper main-wrapper row">
                    <%- include('../news/search.ejs') %>
                    <div class="container">
                        
                        <% if (typeof news !=='undefined' && Array.isArray(news) && news.length> 0) { %>
                            <% for(var i=0; i< news.length; i++){ %>
                            <div class="card mb-3">
                                <div class="container" style="display: flex; flex-direction: row; margin-bottom:30px;">
                                    <img class="img img-thumbnail" src="<%= news[i].image %>" alt="Images" style="flex: 1; max-height: 150px; max-width: 150px; margin-right: 30px; margin-left:20px; margin-top: 30px;">
                                    <div class="content" style="flex: 6; display: flex; flex-direction: column;">
                                        <h4 class="name" style="margin-top: 30px;">
                                            <a href="/admin/news/details/<%= news[i]._id %>" style="color:#404040  ; "><%= news[i].name %></a>
                                        </h4>
                                        <span class="text" style="overflow: hidden; max-height: 50px; max-width: 100%; font-size: 15px; text-overflow: ellipsis;">
                                            Nội dung bài viết: <%= news[i].content %>
                                        </span>
                                        <a href="/admin/news/details/<%= news[i]._id %>">Xem thêm...</a>
                                        <span class="date">Ngày đăng: <%= new Date(news[i].createdAt).toLocaleString('vi-VN') %> | Cập nhật lần cuối: <%= new Date(news[i].updatedAt).toLocaleString('vi-VN') %></span>
                                        <div class="btn-group btn-group-sm" role="group" aria-label="Basic example" style="margin-top:15px;">
                                            <button type="button" class="btn btn-secondary" onclick="urlAction('/admin/news/details/<%= news[i]._id %>')">Chi tiết</button>
                                            <button type="button" class="btn btn-warning" onclick="urlAction('/admin/news/edit/<%= news[i]._id %>')">Sửa</button>
                                            <button type="button" class="btn btn-danger" onclick="urlAction('/admin/news/delete/<%= news[i]._id %>')">Xóa</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                <hr>
                                <% } %>
                                    <% } else { %>
                                        <div class="alert" role="alert" style="background-color:#C0C0C0;" >
                                            <a style="color :#474747">Opps! Không có tin tức nào để hiển thị!</a>
                                          </div>
                                        <% } %>
                    </div>


                </section>
            </section>
            <!-- END CONTENT -->
            <div class="chatapi-windows ">
            </div>
            <%- include('../layout/footer.ejs') %>